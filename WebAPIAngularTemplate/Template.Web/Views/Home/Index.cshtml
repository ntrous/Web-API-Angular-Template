<!DOCTYPE html>
<html ng-app="angularApp">
<head>
    <!-- Google Analytics Code -->
    <script>
        if (window.location.hostname === 'prod_url.com') {
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'GA ID Goes Here', 'auto');
        }
    </script>
    <!-- Google Analytics code ends here -->

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title ng-bind="title"></title>
    <meta name="description" ng-attr-content={{description}} />
    <meta name="fragment" content="!">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" type="text/css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/Images/favicon.ico" type="image/x-icon">
    <base href="/">
</head>
<body ng-controller="IndexCtrl">
    <div id="main" class="container-fluid">
        <div class="pageHeading hidden-xs">
            <div class="title">
                <h1>Title Goes Here!</h1>
            </div>
        </div>

        <nav class="navbar navbar-inverse navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="pageHeading visible-xs">
                        <div class="smaller-title">
                            <h1>Mobile Title Goes Here!</h1>
                        </div>
                    </div>
                </div>

                <div class="collapse navbar-collapse" id="typ-navigation">
                    <ul class="nav navbar-nav">
                        <li ng-class="{active:isActive('/')}"><a href="/" data-toggle="collapse" data-target=".navbar-collapse.in">Home</a></li>
                        <li ng-class="{active:isActive('/Login')}"><a href="/Login" data-toggle="collapse" data-target=".navbar-collapse.in">Login</a></li>
                    </ul>
                </div>

            </div>

        </nav>

        <div class="container-fluid">
            <div>
                <div class="col-md-12 content col-mobile" ng-if='!isRouteLoading' ng-view autoscroll="true">

                </div>
                <div class="col-md-12">
                    <route-loading-indicator />
                </div>
            </div>
        </div>
    </div>
    <footer class="navbar-bottom navFooter container-fluid">

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularUIBootstrap")
    @Scripts.Render("~/bundles/angularApp")
    @Scripts.Render("~/bundles/externalLibs")
    @Scripts.Render("~/bundles/angularModules")
</body>
</html>